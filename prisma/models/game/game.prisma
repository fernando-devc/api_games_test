model Game {
    id           String   @id @default(uuid())
    title        String   @unique
    description  String
    genre        String
    platformType String
    publisher    String
    developer    String
    releaseDate  DateTime
    rating       Float?
    price        Float
    imageUrl     String?

    platforms    Platform[] @relation("GamePlatforms")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
